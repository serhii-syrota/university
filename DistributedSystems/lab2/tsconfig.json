{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": false,
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typeRoots": ["./node_modules/@types/"]
}
